# ============================================
# Shift Service Environment Configuration
# ============================================
# Copy this file to .env and update with your actual values

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=mysql+pymysql://shift_user:your_password@localhost:3308/shift_db

# ============================================
# Redis Configuration
# ============================================
# Redis for caching current shift state
REDIS_URL=redis://:your_redis_password@localhost:6379/0

# ============================================
# External Service URLs
# ============================================
# Weight Service (for fetching transaction data)
WEIGHT_SERVICE_URL=http://localhost:5001

# Billing Service (for provider information)
BILLING_SERVICE_URL=http://localhost:5002

# ============================================
# Server Configuration
# ============================================
# APP_NAME=Shift Service
# APP_VERSION=1.0.0
# DEBUG=False

# ============================================
# CORS Configuration
# ============================================
# CORS_ORIGINS=["http://localhost:3000", "http://localhost"]
# CORS_CREDENTIALS=True
# CORS_METHODS=["*"]
# CORS_HEADERS=["*"]
